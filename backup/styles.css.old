/* HC Eco System - Complete Clean CSS */
:root {
    --color-green: #0b8f24;
    --color-green-dark: #06661a;
    --color-yellow: #f2c744;
    --color-white: #ffffff;
    --color-bg: #f6f9f2;
    --color-text: #1f2c1f;
    --color-muted: #5a6d58;
    --max-width: 1120px;
}

* {
    box-sizing: border-box;
}

body {
    margin: 0;
    font-family: 'Inter', Arial, sans-serif;
    color: var(--color-text);
    background: var(--color-bg);
}

a {
    color: inherit;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

.container {
    width: min(92%, var(--max-width));
    margin: 0 auto;
}

/* Header Styles */
.topbar {
    position: sticky;
    top: 0;
    background: var(--color-white);
    border-bottom: 1px solid #dbe5d7;
    z-index: 20;
}

.topbar-layout {
    width: calc(100% - 10px);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding: 0.8rem 0;
}

.branding {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: opacity 0.2s ease;
}

.branding:hover {
    opacity: 0.8;
    text-decoration: none;
}

.branding .logo-image {
    width: 60px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 6px 14px rgba(11, 143, 36, 0.15);
}

.branding .brand-copy {
    display: flex;
    flex-direction: column;
}

.branding .logo {
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--color-green);
}

.branding .logo span {
    color: var(--color-yellow);
}

.branding p {
    margin: 0.2rem 0 0;
    font-size: 0.85rem;
    color: var(--color-muted);
}

.topbar-actions {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
}

.nav {
    flex: 1;
    display: flex;
    justify-content: center;
    gap: 7px;
    font-weight: 500;
}

.nav a {
    padding: 0.7rem 1.2rem;
    border-radius: 999px;
    border: 1px solid transparent;
    transition: all 0.3s ease;
    font-weight: 500;
}

.nav a:hover,
.nav a:focus {
    background: rgba(11, 143, 36, 0.08);
    border-color: rgba(11, 143, 36, 0.2);
    color: var(--color-green);
    text-decoration: none;
    box-shadow: 0 4px 12px rgba(11, 143, 36, 0.15);
    transform: translateY(-1px);
}

.cta {
    flex-shrink: 0;
    padding: 0.7rem 1.4rem;
    background: linear-gradient(135deg, var(--color-yellow), #ffd76a);
    color: #134217;
    border-radius: 999px;
    font-weight: 600;
    box-shadow: 0 8px 18px rgba(11, 143, 36, 0.15);
}

/* Hero Section */
.hero {
    padding: 5rem 0 4rem;
    background: linear-gradient(165deg, rgba(11, 143, 36, 0.08) 0%, rgba(242, 199, 68, 0.1) 100%);
}

.hero .container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
    align-items: center;
}

.eyebrow {
    display: inline-block;
    padding: 0.35rem 1rem;
    background: rgba(11, 143, 36, 0.14);
    color: var(--color-green-dark);
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.85rem;
}

.hero h1 {
    font-size: clamp(2rem, 3.6vw, 3rem);
    line-height: 1.15;
    margin: 1.2rem 0 1rem;
}

.hero p {
    max-width: 520px;
    font-size: 1.05rem;
    color: var(--color-muted);
}

.hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1.6rem;
}

.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.85rem 1.6rem;
    border-radius: 999px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.btn.primary {
    background: var(--color-green);
    color: var(--color-white);
    box-shadow: 0 10px 22px rgba(6, 102, 26, 0.24);
}

.btn.primary:hover {
    transform: translateY(-2px);
}

.btn.secondary {
    background: var(--color-white);
    color: var(--color-green);
    border: 1px solid rgba(6, 102, 26, 0.3);
}

.hero-card {
    background: var(--color-white);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 18px 35px rgba(17, 60, 26, 0.08);
    display: grid;
    gap: 1.8rem;
}

.hero-card .stats {
    display: grid;
    grid-template-columns: repeat(2, minmax(140px, 1fr));
    gap: 1.5rem;
}

.hero-card h3 {
    margin: 0;
    font-size: 2rem;
    color: var(--color-green);
}

.hero-card p {
    margin: 0.3rem 0 0;
    color: var(--color-muted);
}

.hero-card .highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.6rem;
}

.hero-card .highlights li {
    position: relative;
    padding-left: 1.6rem;
    color: var(--color-text);
}

.hero-card .highlights li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.45rem;
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
    background: radial-gradient(circle at center, var(--color-yellow) 40%, var(--color-green) 100%);
}

/* Section Styles */
section {
    padding: 4.5rem 0;
}

section header {
    text-align: center;
    margin-bottom: 3rem;
}

section header h2 {
    margin: 0;
    font-size: clamp(1.8rem, 3vw, 2.4rem);
}

section header p {
    margin-top: 1rem;
    color: var(--color-muted);
}

.solutions .grid,
.benefits .grid {
    display: grid;
    gap: 1.8rem;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
}

.card {
    background: var(--color-white);
    border-radius: 18px;
    padding: 2rem;
    box-shadow: 0 15px 30px rgba(8, 48, 16, 0.08);
    border: 1px solid rgba(11, 143, 36, 0.12);
}

.card h3 {
    margin-top: 0;
    color: var(--color-green);
}

.card ul {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0 0;
    display: grid;
    gap: 0.5rem;
    color: var(--color-muted);
}

.card ul li::before {
    content: 'âœ“';
    color: var(--color-yellow);
    margin-right: 0.5rem;
}

.benefits article {
    background: rgba(255, 255, 255, 0.8);
    border-radius: 16px;
    padding: 1.8rem;
    border: 1px solid rgba(11, 143, 36, 0.1);
    box-shadow: 0 12px 20px rgba(8, 48, 16, 0.06);
}

/* Process Section */
.process {
    background: linear-gradient(180deg, rgba(242, 199, 68, 0.15) 0%, rgba(11, 143, 36, 0.1) 100%);
}

.process .steps {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.process article {
    background: var(--color-white);
    padding: 1.8rem;
    border-radius: 16px;
    border: 1px solid rgba(6, 102, 26, 0.12);
    box-shadow: 0 14px 28px rgba(6, 102, 26, 0.08);
    position: relative;
}

.step-number {
    position: absolute;
    top: 1.2rem;
    left: 1.2rem;
    background: var(--color-green);
    color: var(--color-white);
    padding: 0.4rem 0.9rem;
    border-radius: 999px;
    font-weight: 600;
    box-shadow: 0 10px 20px rgba(6, 102, 26, 0.2);
}

.process h3 {
    margin-top: 0;
    margin-left: 4rem;
    color: var(--color-green);
}

/* CTA Banner */
.cta-banner {
    background: var(--color-green);
    color: var(--color-white);
    padding: 3.2rem 0;
}

.cta-banner .container {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
    justify-content: space-between;
}

/* Contact Section */
.contact {
    padding: 4.5rem 0;
}

.contact .container {
    display: grid;
    gap: 2.5rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

.contact ul {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0 0;
    display: grid;
    gap: 0.6rem;
}

.form {
    display: grid;
    gap: 1.2rem;
}

.form label {
    display: grid;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--color-text);
}

.form input,
.form select,
.form textarea {
    padding: 0.75rem 0.9rem;
    border-radius: 12px;
    border: 1px solid rgba(95, 125, 90, 0.4);
    background: rgba(246, 249, 242, 0.8);
    font-size: 0.95rem;
    font-family: inherit;
    color: var(--color-text);
}

.form input:focus,
.form select:focus,
.form textarea:focus {
    outline: 2px solid rgba(11, 143, 36, 0.3);
}

/* Footer */
.footer {
    background: #053510;
    color: rgba(255, 255, 255, 0.78);
    padding: 3rem 0 2rem;
}

.footer-layout {
    display: grid;
    grid-template-columns: 1fr 2fr 2fr;
    gap: 2rem;
    align-items: start;
}

.footer-left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-left: 20px;
}

.footer-center {
    padding: 0 1rem;
}

.footer-right {
    padding-right: 20px;
}

.footer-left h4,
.footer-right h4 {
    color: var(--color-white);
    margin: 0 0 1rem;
    font-size: 1.1rem;
}

.policy-links {
    list-style: none;
    padding: 0;
    margin: 0;
}

.policy-links li {
    margin-bottom: 0.8rem;
    font-size: 0.95rem;
}

.policy-links a {
    color: rgba(255, 255, 255, 0.78);
    transition: color 0.2s ease;
}

.policy-links a:hover {
    color: var(--color-yellow);
    text-decoration: none;
}

.footer-branding {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.8rem;
    margin-bottom: 1rem;
    transition: opacity 0.2s ease;
}

.footer-branding:hover {
    opacity: 0.8;
    text-decoration: none;
}

.footer-logo {
    width: 50px;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 4px 12px rgba(11, 143, 36, 0.15);
}

.footer-brand-copy {
    text-align: left;
}

.footer-brand-name {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--color-white);
}

.footer-brand-name span {
    color: var(--color-yellow);
}

.footer-brand-copy p {
    margin: 0.3rem 0 0;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.6);
}

.copyright {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    line-height: 1.4;
    max-width: 200px;
}

.footer .container {
    display: flex;
    flex-wrap: wrap;
    gap: 1.2rem;
    align-items: center;
    justify-content: space-between;
}

.footer .links {
    display: flex;
    gap: 1.5rem;
}

.footer a {
    color: rgba(255, 255, 255, 0.78);
}

.contact-info {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0 0;
    display: grid;
    gap: 0.6rem;
}

/* Pricing Page Styles */
.pricing-hero {
    background: linear-gradient(165deg, rgba(11, 143, 36, 0.08) 0%, rgba(242, 199, 68, 0.1) 100%);
    text-align: center;
}

.pricing-plans {
    padding: 5rem 0;
}

.pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.pricing-card {
    background: var(--color-white);
    border-radius: 20px;
    padding: 2.5rem 2rem;
    box-shadow: 0 15px 35px rgba(8, 48, 16, 0.08);
    border: 1px solid rgba(11, 143, 36, 0.12);
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.pricing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 25px 45px rgba(8, 48, 16, 0.15);
}

.pricing-card.premium {
    border: 2px solid var(--color-green);
    transform: scale(1.05);
}

.plan-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-yellow);
    color: #134217;
    padding: 0.4rem 1.2rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.85rem;
}

.premium-badge {
    background: var(--color-green);
    color: var(--color-white);
}

.pricing-card h3 {
    margin: 1rem 0 0.5rem;
    color: var(--color-green);
    font-size: 1.5rem;
}

.price {
    margin: 1rem 0;
}

.price .amount {
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--color-green);
}

.price .unit {
    color: var(--color-muted);
    font-size: 1rem;
}

.capacity {
    background: rgba(11, 143, 36, 0.08);
    color: var(--color-green);
    padding: 0.5rem 1rem;
    border-radius: 12px;
    text-align: center;
    font-weight: 600;
    margin-bottom: 1.5rem;
}

.pricing-card .features {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
}

.pricing-card .features li {
    padding: 0.5rem 0;
    position: relative;
    padding-left: 1.5rem;
    color: var(--color-text);
    border-bottom: 1px solid rgba(11, 143, 36, 0.08);
}

.pricing-card .features li:last-child {
    border-bottom: none;
}

.pricing-card .features li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--color-green);
    font-weight: 700;
}

.savings {
    background: rgba(242, 199, 68, 0.15);
    padding: 1rem;
    border-radius: 12px;
    text-align: center;
    margin: 1.5rem 0;
    color: var(--color-green);
}

.full-width {
    width: 100%;
    justify-content: center;
}

.pricing-comparison {
    background: var(--color-bg);
    padding: 4rem 0;
}

.comparison-table {
    overflow-x: auto;
    margin-top: 2rem;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(8, 48, 16, 0.08);
}

.comparison-table table {
    width: 100%;
    background: var(--color-white);
    border-collapse: collapse;
}

.comparison-table th,
.comparison-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(11, 143, 36, 0.12);
}

.comparison-table th {
    background: var(--color-green);
    color: var(--color-white);
    font-weight: 600;
}

.comparison-table tr:hover {
    background: rgba(11, 143, 36, 0.05);
}

.pricing-faq {
    padding: 4rem 0;
}

.faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}

.faq-item {
    background: var(--color-white);
    padding: 1.8rem;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(8, 48, 16, 0.08);
}

.faq-item h3 {
    color: var(--color-green);
    margin-top: 0;
}

/* Products Grid Styles */
.products-grid-section {
    padding: 5rem 0;
    background: rgba(11, 143, 36, 0.02);
}

.products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-top: 3rem;
}

.product-card {
    background: var(--color-white);
    border-radius: 16px;
    padding: 2rem 1.5rem;
    text-align: center;
    text-decoration: none;
    color: inherit;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    box-shadow: 0 8px 20px rgba(8, 48, 16, 0.08);
    position: relative;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.product-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-green);
    box-shadow: 0 15px 30px rgba(8, 48, 16, 0.15);
    text-decoration: none;
}

.product-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.product-card h3 {
    font-size: 1.1rem;
    margin: 0.5rem 0;
    color: var(--color-green);
    line-height: 1.3;
}

.product-card p {
    color: var(--color-muted);
    font-size: 0.9rem;
    margin: 0.5rem 0;
    flex-grow: 1;
}

.product-badge {
    background: rgba(11, 143, 36, 0.08);
    color: var(--color-green);
    padding: 0.3rem 0.8rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 600;
    margin-top: 1rem;
    display: inline-block;
}

/* Product Detail Page Styles */
.product-hero {
    padding: 2rem 0 4rem;
    background: linear-gradient(165deg, rgba(11, 143, 36, 0.08) 0%, rgba(242, 199, 68, 0.1) 100%);
}

.breadcrumb {
    margin-bottom: 2rem;
    font-size: 0.9rem;
    color: var(--color-muted);
}

.breadcrumb a {
    color: var(--color-green);
}

.breadcrumb span {
    margin: 0 0.5rem;
}

.product-hero-content {
    max-width: 800px;
}

.product-info .eyebrow {
    display: inline-block;
    padding: 0.35rem 1rem;
    background: rgba(11, 143, 36, 0.14);
    color: var(--color-green-dark);
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.85rem;
    margin-bottom: 1rem;
}

.product-info h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.15;
    margin: 1rem 0;
    color: var(--color-text);
}

.product-info p {
    font-size: 1.1rem;
    color: var(--color-muted);
    line-height: 1.6;
    margin-bottom: 2rem;
}

.product-highlights {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
}

.highlight-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.highlight-item strong {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--color-green);
    margin-bottom: 0.3rem;
}

.highlight-item span {
    font-size: 0.9rem;
    color: var(--color-muted);
}

.product-categories {
    padding: 5rem 0;
}

.categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
}

.category-card {
    background: var(--color-white);
    border-radius: 16px;
    padding: 1.8rem;
    border: 1px solid rgba(11, 143, 36, 0.12);
    box-shadow: 0 8px 20px rgba(8, 48, 16, 0.08);
    position: relative;
    transition: all 0.3s ease;
}

.category-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 30px rgba(8, 48, 16, 0.12);
}

.category-card.featured {
    border: 2px solid var(--color-green);
    transform: scale(1.02);
}

.featured-badge {
    position: absolute;
    top: -10px;
    right: 15px;
    background: var(--color-green);
    color: var(--color-white);
    padding: 0.3rem 0.8rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 600;
}

.category-image {
    font-size: 2.2rem;
    text-align: center;
    margin-bottom: 1rem;
}

.category-card h3 {
    margin: 0.5rem 0;
    color: var(--color-green);
    font-size: 1.2rem;
}

.specs {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: var(--color-muted);
}

.price-range {
    background: rgba(242, 199, 68, 0.15);
    color: var(--color-green);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-align: center;
    font-weight: 600;
    margin-bottom: 1rem;
}

.features-list {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
}

.features-list li {
    padding: 0.3rem 0;
    position: relative;
    padding-left: 1.2rem;
    font-size: 0.9rem;
    color: var(--color-muted);
}

.features-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--color-green);
    font-weight: 600;
}

/* Product Details Table Styles */
.product-details-table {
    padding: 5rem 0;
    background: rgba(11, 143, 36, 0.02);
}

.products-table {
    background: var(--color-white);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 15px 35px rgba(8, 48, 16, 0.08);
    margin-top: 2rem;
}

.products-table table {
    width: 100%;
    border-collapse: collapse;
}

.products-table th {
    background: var(--color-green);
    color: var(--color-white);
    padding: 1.2rem 1rem;
    text-align: left;
    font-weight: 600;
    font-size: 1rem;
}

.products-table td {
    padding: 1.5rem 1rem;
    border-bottom: 1px solid rgba(11, 143, 36, 0.1);
    vertical-align: top;
}

.products-table tr:last-child td {
    border-bottom: none;
}

.products-table tr:hover {
    background: rgba(11, 143, 36, 0.03);
}

.product-image img {
    width: 150px;
    height: 120px;
    object-fit: contain;
    border-radius: 8px;
    border: 1px solid rgba(11, 143, 36, 0.2);
}

.product-specs h4 {
    margin: 0 0 0.8rem;
    color: var(--color-green);
    font-size: 1.1rem;
}

.product-specs ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.product-specs li {
    padding: 0.2rem 0;
    font-size: 0.9rem;
    color: var(--color-text);
}

.product-specs strong {
    color: var(--color-green);
    min-width: 80px;
    display: inline-block;
}

.product-price {
    text-align: center;
}

.price-main {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--color-green);
    margin-bottom: 0.3rem;
}

.price-unit {
    font-size: 0.9rem;
    color: var(--color-muted);
    background: rgba(242, 199, 68, 0.15);
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    display: inline-block;
}

.product-actions {
    text-align: center;
}

.product-actions .btn {
    display: block;
    width: 100%;
    margin-bottom: 0.5rem;
    padding: 0.6rem 1rem;
    font-size: 0.9rem;
}

.product-actions .btn:last-child {
    margin-bottom: 0;
}

.product-features {
    padding: 4rem 0;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}

.feature-card {
    background: var(--color-white);
    padding: 1.8rem;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 8px 20px rgba(8, 48, 16, 0.08);
    border: 1px solid rgba(11, 143, 36, 0.12);
}

.feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.feature-card h3 {
    color: var(--color-green);
    margin: 0.5rem 0;
}

.feature-card p {
    color: var(--color-muted);
    font-size: 0.95rem;
    line-height: 1.5;
}

/* Quick Contact Widget */
.quick-contact {
    position: fixed;
    left: 1rem;
    top: calc(50% + 60px);
    transform: translateY(-50%);
    display: grid;
    gap: 0.6rem;
    z-index: 99;
}

.quick-contact .contact-item {
    position: relative;
    display: flex;
    align-items: center;
    width: 60px;
    padding: 0.55rem;
    border-radius: 999px;
    overflow: hidden;
    background: transparent;
    color: var(--color-text);
    transition: width 0.35s ease;
}

.quick-contact .contact-item:hover,
.quick-contact .contact-item:focus {
    width: 220px;
}

.quick-contact .icon {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    color: var(--color-white);
    flex-shrink: 0;
}

.quick-contact .icon svg {
    width: 22px;
    height: 22px;
}

/* Quick Contact Icon Colors */
.contact-item--fanpage .icon {
    background: #1778f2;
}

.contact-item--zalo .icon {
    background: #0285ff;
}

.contact-item--tiktok .icon {
    background: linear-gradient(135deg, #010101 0%, #ff0050 55%, #00f2ea 100%);
}

.contact-item--youtube .icon {
    background: #ff0000;
}

.contact-item--phone .icon {
    background: var(--color-green);
}

.quick-contact .label {
    margin-left: 0.75rem;
    padding: 0.45rem 0.9rem;
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    background: rgba(255, 255, 255, 0.96);
    border-radius: 18px;
    box-shadow: 0 12px 24px rgba(11, 143, 36, 0.16);
    opacity: 0;
    transform: translateX(-12px);
    transition: opacity 0.25s ease 0.08s, transform 0.35s ease;
    white-space: nowrap;
}

.quick-contact .contact-item:hover .label,
.quick-contact .contact-item:focus .label {
    opacity: 1;
    transform: translateX(0);
}

.quick-contact .label strong {
    font-size: 0.96rem;
}

.quick-contact .label span {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-muted);
}

/* Responsive Design */
@media (max-width: 1024px) {
    .topbar-layout {
        flex-wrap: wrap;
        justify-content: center;
    }

    .topbar-actions {
        justify-content: center;
    }
}

@media (max-width: 768px) {
    .footer-layout {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2.5rem;
    }
    
    .footer-left,
    .footer-right {
        padding: 0;
    }
    
    .footer-center {
        order: -1;
        padding: 0;
    }
    
    .policy-links {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .topbar-layout {
        flex-direction: column;
        align-items: center;
        gap: 1.2rem;
    }

    .topbar-actions {
        flex-direction: column;
        gap: 1rem;
    }

    .nav {
        justify-content: center;
        flex-wrap: wrap;
    }

    .hero {
        padding-top: 4rem;
    }

    .hero-card .stats {
        grid-template-columns: 1fr;
    }

    .cta-banner .container {
        flex-direction: column;
        text-align: center;
    }

    .quick-contact {
        top: auto;
        bottom: 1.5rem;
        transform: translateY(0);
    }

    .pricing-card.premium {
        transform: none;
    }
    
    .pricing-grid {
        grid-template-columns: 1fr;
    }
    
    .comparison-table {
        font-size: 0.9rem;
    }
    
    .products-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }
    
    .product-card {
        padding: 1.5rem 1rem;
        min-height: 180px;
    }
    
    .product-icon {
        font-size: 2rem;
    }
    
    .product-highlights {
        flex-direction: column;
        gap: 1rem;
    }
    
    .categories-grid {
        grid-template-columns: 1fr;
    }
    
    .category-card.featured {
        transform: none;
    }
    
    .products-table {
        overflow-x: auto;
    }
    
    .products-table table {
        min-width: 800px;
    }
    
    .products-table th,
    .products-table td {
        padding: 1rem 0.5rem;
        font-size: 0.9rem;
    }
    
    .product-image img {
        width: 100px;
        height: 80px;
    }
    
    .price-main {
        font-size: 1.1rem;
    }
    
    .product-specs li {
        font-size: 0.8rem;
    }
}

@media (max-width: 520px) {
    .btn {
        width: 100%;
    }

    .topbar-layout {
        gap: 1rem;
    }

    .quick-contact .contact-item {
        width: 54px;
    }

    .quick-contact .contact-item:hover,
    .quick-contact .contact-item:focus {
        width: 200px;
    }
    
    .products-grid {
        grid-template-columns: 1fr;
    }
}